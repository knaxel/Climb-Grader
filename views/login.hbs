
{{>header}}

<div class="navbar">
	<ul class="">
		<li><a class="navlink" href="/"  >Home</a></li>
		<li><a class="navlink" href="/signup" >Sign Up</a></li>
		<li><a class="navlink" href="/login" style="font-weight: 600;" >Sign In</a></li>
		
	</ul>
</div>

{{#if errors}}
<div class="row"style="margin-top: 1%" >
	<ul class="five columns" style="margin: 0 auto;float: none;text-align: center;">
    {{#each errors}}

    <li style="color:red;">{{this.msg}}</li>
    {{/each}}

	</ul>
</div>
<hr>

{{/if}}
{{#if msg}}
<div class="row"  style="margin-top: 5%">
	<p style="margin-bottom: 0%" >{{msg}}</p>
</div>
{{/if}}

<form  method="post" action="" style="margin-top: 5%" >
	<div  class="row">
		<div class="column"> 
			<label > email </label>
			<input type="email" name="email" class="u-full-width" />
		</div>
	</div>
	<div  class="row">
		<div class="column"> 
			<label > password </label>
			<input type="password" name="password" class="u-full-width" />
		</div>
	</div>
	<div  class="row">
		<button style="float:right;"  type="submit" name="submit" value="submit" >Login</button>
		<a style="float:right;margin-right:1rem;" class="button" href="signup" >Sign Up</a>
	</div>
</form>

<hr>
<div class="row" >
	<div class="five columns" style="margin: 0 auto;float: none;text-align: center;"> <p>Remember! Route setters don't have accounts- only the gym owner/manager. Scan the QR code your manager gives you to login for route setting!</p></div>
</div>
